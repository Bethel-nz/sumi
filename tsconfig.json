{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "declaration": true,
    "declarationDir": "./dist",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "index.ts", "bin/**/*"],
  "exclude": ["node_modules", "dist", "example/**/*"]
}
